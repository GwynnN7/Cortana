@page "/sensor"
@using CortanaLib
@using CortanaLib.Structures

<PageTitle>Sensors List</PageTitle>

<h1>Sensors List</h1>

@if (_data == null)
{
    <p>
        <em>Reading sensors...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Time</th>
            <th aria-label="Name">Name</th>
            <th aria-label="Value">Value</th>
        </tr>
        </thead>
        <tbody>
        @foreach (SensorData data in _data)
        {
            <tr>
                <td>@data.Time.ToShortTimeString()</td>
                <td>@data.Text</td>
                <td>@data.Value</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<SensorData>? _data;

    protected override async Task OnInitializedAsync()
    {
        TimeOnly time = TimeOnly.FromDateTime(DateTime.Now);
        _data =
        [
            new SensorData
            {
                Time = time,
                Text = "Temperature",
                Value = (await ApiHandler.Get($"{ERoute.Sensor}/{ESensor.Temperature}")).Response
            },

            new SensorData
            {
                Time = time,
                Text = "Motion",
                Value = (await ApiHandler.Get($"{ERoute.Sensor}/{ESensor.Motion}")).Response
            },

            new SensorData
            {
                Time = time,
                Text = "Light",
                Value = (await ApiHandler.Get($"{ERoute.Sensor}/{ESensor.Light}")).Response
            }
        ];
        await base.OnInitializedAsync();
    }

    private class SensorData
    {
        public TimeOnly Time { get; init; }
        public required string Text { get; init; }
        public required string Value { get; init; }
    }

}